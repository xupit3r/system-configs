#
# slowly evolving sway config...
#

### Variables
#
# Use Mod4 for Logo
# Use Mod1 for Alr
set $mod Mod4

# default applications
set $term kitty 
set $browser firefox
set $mail mailspring
set $mail_startup mailspring -b
set $emoji emote
set $filemanager nemo
set $mixer easyeffects
set $password_manager 1password
set $reader = feeds
set $launcher /home/joe/.local/bin/launcher

# some default configs
set $bg_fallback #bbbcb6


# set up some of the gtk settings
set $gnome-schema org.gnome.desktop.interface
exec_always {
  gsettings set $gnome-schema gtk-theme 'Orchis-Teal-Dark'
  gsettings set $gnome-schema icon-theme 'Flatery-Teal-Dark'
  gsettings set $gnome-schema cursor-theme 'Adwaita'
  gsettings set $gnome-schema font-antialiasing 'grayscale'
  gsettings set $gnome-schema font-hinting 'full'
  gsettings set $gnome-schema font-name 'Jost* 14'
  gsettings set $gnome-schema monospace-font-name 'Iosevka Term 16'
  gsettings set $gnome-schema document-font-name 'Jost* 16'
}

# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu j4-dmenu-desktop --dmenu="$launcher" --no-generic --term=$term --use-xdg-de | xargs swaymsg exec --

exec mako
exec $password_manager
exec $mail_startup

### Appearance
default_border pixel 0
default_floating_border pixel 0
hide_edge_borders smart_no_gaps

# set border colors
client.focused              #82aaff #2c2c2c #c8d3f5 #82aaff #82aaff
client.focused_inactive     #595959 #2c2c2c #c8d3f5 #595959 #595959
client.unfocused            #595959 #2c2c2c #c8d3f5 #595959 #595959
client.urgent               #595959 #2c2c2c #c8d3f5 #595959 #595959
client.placeholder          #595959 #2c2c2c #c8d3f5 #595959 #595959

smart_gaps on
gaps inner 2
gaps outer 2

# window corner radius in px
corner_radius 15

# Window background blur
blur on
blur_xray on
blur_passes 8
blur_radius 6

shadows on
shadows_on_csd off
shadow_blur_radius 15
shadow_color #c099ffe2

# inactive window fade amount. 0.0 = no dimming, 1.0 = fully dimmed
default_dim_inactive 0.35
dim_inactive_colors.unfocused #2f334de6
dim_inactive_colors.urgent #c53b53ed

# Move minimized windows into Scratchpad (enable|disable)
scratchpad_minimize enable

### window specific stuffs

# some workspace assignments
for_window [class="teamworkchat"] workspace "comm"
for_window [instance="mailspring"] workspace "comm"
for_window [app_id="org.gambus.gfeeds"] workspace "comm"
for_window [app_id="com.github.wwmm.easyeffects"] workspace "comm", floating enable
for_window [title="ncspot"] workspace "comm', floating enable, floating_minimum_size 400 x 600, floating_maxium_size 500 x 800

# float these fellas...
for_window [class="1Password"] floating enable
for_window [app_id="nemo"] floating enable
for_window [app_id="blueberry.py"] floating enable
for_window [app_id="Cisco AnyConnect Secure Mobility Client"] floating enable


# Zoom Meeting App

# send zoom to the "zoom" workspace
for_window [app_id="zoom"] workspace "zoom"

# Default for all windows is non-floating.
# 
# For pop up notification windows that don't use notifications api
for_window [app_id="zoom" title="^zoom$"] border none, floating enable

# For specific Zoom windows
for_window [app_id="zoom" title="^(Zoom|About)$"] border none, floating enable
for_window [app_id="zoom" title="as_toolbar"] border none, floating enable
for_window [app_id="zoom" title="Settings"] floating enable, floating_minimum_size 960 x 700


### Output configuration


# configuration for LG monitors
output DP-1 {
  res 3840x2160 
  pos 0,0 
  scale 1
  bg $HOME/.backgrounds/lg/gradient.png fill $bg_fallback
}

# configuration for framework display
output eDP-1 {
  res 2256x1504 
  pos 3840,0 
  scale 1
  bg $HOME/.backgrounds/framework/gradient.png fill $bg_fallback
}

# set some sane sizes for floating windows
floating_minimum_size 500 x 250
floating_maximum_size 1600 x 1200

### Idle configuration
#
# Example configuration:
#
# exec swayidle -w \
#          timeout 300 'swaylock -f -c 000000' \
#          timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
#          before-sleep 'swaylock -f -c 000000'
#
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.

### Input configuration

# some stuffs for the framework touchpad
input "2362:628:PIXA3854:00_093A:0274_Touchpad" {
  dwt enabled
  tap disabled
  natural_scroll enabled
  middle_emulation disabled
  click_method clickfinger
  scroll_method two_finger
  scroll_factor 1.1
}

# when i have a touchpad, swiping can move between workspaces
bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

# set natural scrolling for my mice

# white logitech M650
input "1133:45098:Logitech_Signature_M650_L_Mouse" {
  natural_scroll enabled
}

# blue logitech M650
input "1133:45098:Logi_M650_L" {
  natural_scroll enabled
}

### Key bindings

#
# Basics:
#
    # bindings for launching some apps
    bindsym $mod+t exec $term
    bindsym $mod+r exec $menu
    bindsym $mod+b exec $browser
    bindsym $mod+m exec $mail
    bindsym $mod+o exec $filemanager
    bindsym $mod+e exec $emoji
    bindsym $mod+p exec $password_manager
 
    # kill current window
    bindsym $mod+w kill

    # notifications
    bindsym Control+Space exec makoctl dismiss
    bindsym Control+Shift+Space exec makoctl dismiss --all

    # volume controls
    bindsym --locked XF86AudioRaiseVolume exec --no-startup-id wpctl set-volume --limit 1.0 @DEFAULT_AUDIO_SINK@ 5%+
    bindsym --locked XF86AudioLowerVolume exec --no-startup-id wpctl set-volume --limit 0 @DEFAULT_AUDIO_SINK@ 5%-
    bindsym --locked XF86AudioMute exec --no-startup-id wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle

    # playback controls
    bindsym --locked XF86AudioPlay exec playerctl play-pause
    bindsym --locked XF86AudioNext exec playerctl next
    bindsym --locked XF86AudioPrev exec playerctl previous

    
    # brightness controls
    bindsym --locked XF86MonBrightnessUp exec --no-startup-id light -A 10
    bindsym --locked XF86MonBrightnessDown exec --no-startup-id light -U 10

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
#
# Moving around:
#
    # switch focuse
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right


    # move windows
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right
#
# Workspaces:
#

    # assign workspaces to monitors
    # comm -> DP-1 (communications stuffs)
    # main -> DP-1 (development, browsing, etc...focus)
    # 2 -> eDP-1 (secondary attention stuffs)
    workspace "comm" output DP-1
    workspace "main" output DP-1
    workspace "zoom" output eDP-1
    workspace "aux" output eDP-1
    
    # Switch to workspace
    bindsym $mod+1 workspace "main"
    bindsym $mod+Backspace workspace "comm"
    bindsym $mod+2 workspace "aux"
    bindsym $mod+z workspace "zoom"

    # Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace "main"
    bindsym $mod+Shift+Backspace move container to workspace "comm"
    bindsym $mod+Shift+z move container to workspace "zoom"
    bindsym $mod+Shift+2 move container to workspace "aux"

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+h splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    #bindsym $mod+s layout stacking
    #bindsym $mod+d layout tabbed
    bindsym $mod+l layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    #bindsym $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    bindsym $mod+minus scratchpad show
#
# Resizing containers:
#
mode "resize" {
    # Ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Right resize grow width 10px
    bindsym Up resize grow height 10px
    bindsym Down resize shrink height 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "resize"

include /etc/sway/config.d/*
