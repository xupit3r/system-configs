#!/bin/zsh

show=10
font="Jost"
font_size=16
(( line_height=$font_size * 2.1 ))
prompt="Ôç∏"
background="#2c2c2c"
foreground="#c8d3f5"
highlight_background=$background
highlight_foreground="#ba68cb"

bemenu --no-overlap \
       --ignorecase \
       --no-cursor \
       --line-height $line_height \
       --list $show \
       --prompt $prompt \
       --ab $background \
       --af $foreground \
       --sb $background \
       --sf $foreground \
       --fbb $background \
       --fbf $foreground \
       --tb $background \
       --tf $foreground \
       --fb $background \
       --ff $foreground \
       --cb $background \
       --cf $background \
       --nb $background \
       --nf $foreground \
       --hb $highlight_background \
       --hf $highlight_foreground \
       --fn "$font $font_size"
